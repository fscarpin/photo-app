<%= form_for @image, :html => { multipart: true, :class => "form-horizontal image" } do |f| %>

  <% if @image.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"> Error uploading your image</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>

  <div class="form-group medium-padding-top">
    <div class="col-lg-10">
      <%= f.submit "Upload Image", :class => 'btn btn-primary', id: "image-btn-upload" %>
      <%= link_to "Cancel", images_path, :class => 'btn btn-default', id: "image-cancel-btn" %>
    </div>
  </div>

<% end %>


