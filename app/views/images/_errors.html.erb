<% if @errors_hash  %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"> Upload Error</h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @errors_hash.each do |file, msg| %>
        <li><%= "#{file}: #{msg}" %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
