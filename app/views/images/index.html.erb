<%- model_class = Image -%>
<h2>Upload an image </h2>
<%= render "images/form" %>

<table class="table table-striped border-top">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:file_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td>
          <%= link_to image_path(image) do%>
            <%= image_tag image.picture.versions[:thumb].url %>
          <% end %>
        </td>
        <td><%= link_to image.picture.file.file.split("/").last, image_path(image) %></td>
        <td><%=image.created_at.strftime("%c") %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      image_path(image),
                      :method => :delete,
                      :data => { :confirm => 'Are you sure you want do delete this message?' },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
