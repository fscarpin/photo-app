<%= form_for @image, :html => { multipart: true, :class => "form-horizontal image" } do |f| %>

  <% if @errors_hash  %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"> Upload Error</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @errors_hash.each do |file, msg| %>
          <li><%= "#{file}: #{msg}" %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.file_field :pictures, multiple: true, accept: "image/jpeg,image/gif,image/png" %>

  <div class="form-group medium-padding-top">
    <div class="col-lg-10">
      <%= f.submit "Upload Image", :class => 'btn btn-primary', id: "image-btn-upload" %>
      <%= link_to "Cancel", images_path, :class => 'btn btn-default', id: "image-cancel-btn" %>
    </div>
  </div>

<% end %>


