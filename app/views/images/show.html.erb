<%- model_class = Image -%>
<div class="page-header">
  <h1> Image: <%= @image.picture.file.file.split("/").last %> </h1>
  <p> Created at <%= @image.created_at.strftime("%c") %> </p>
</div>

<p>
<%= image_tag @image.picture, class: "image-max-size thumbnail" %>
</p>

<%= link_to t('.back', :default => t("helpers.links.back")), images_path, :class => 'btn btn-default'  %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              image_path(@image),
              :method => 'delete',
              :data => { :confirm => 'Are you sure you want to delete this image?' },
              :class => 'btn btn-danger' %>
